<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/city_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ancizar_serif_regular"
        android:text="Select a city"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <AutoCompleteTextView
        android:id="@+id/auto_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:completionThreshold="1"
        android:fontFamily="@font/ancizar_serif_regular"
        android:hint="City"
        android:inputType="text"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/customer_name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ancizar_serif_regular"
        android:text="Select a customer name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <AutoCompleteTextView
        android:id="@+id/auto_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:completionThreshold="1"
        android:fontFamily="@font/ancizar_serif_regular"
        android:hint="Customer name"
        android:inputType="text"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/list_view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

</LinearLayout>